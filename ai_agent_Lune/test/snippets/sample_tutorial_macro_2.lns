macro _assert( val:__exp, expected:__exp ) {
    if ,,val != ,,expected {
        print( "Assertion Failed:" );
        print( "  Expression:", ,,,,val );
        print( "  Value:     ", ,,val );
        print( "  Expected:  ", ,,expected );
        os.exit( 1 ); // プログラム終了
    } else {
        print( "OK:", ,,,,val );
    }
}

